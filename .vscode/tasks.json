{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Whole Project",
			"type": "shell",
			"command": "make",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Clean Build Whole Project",
			"type": "shell",
			"command": "rm -rf .pragma && make clean && make",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Inspect current .cpp file",
			"detail": "Generate an assembly listing of the result of compiling the current .cpp file.",
			"type": "shell",
			"command": "make inspect INSPECT=${relativeFile}",
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"showReuseMessage": false,
				"clear": true
			},
			"group": "build",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Rip Symbol ...",
			"detail": "Find the cpp file a symbol is in & prep that file for reverse engineering.",
			"type": "shell",
			"command": "python3 tools/symbol_ripper/main.py ${input:rippedSymbol}",
			"group": "build",
			"presentation": {
				"reveal": "silent",
			},
			"problemMatcher": []
		},
		{
			"label": "Run meld",
			"type": "shell",
			"command": "tools/meld/meld-auto-refresh/bin/meld tools/diff_func/baserom_pp.dump tools/diff_func/main_pp.dump",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "diff address set start",
			"type": "shell",
			"command": "echo ${input:address} > tools/diff_func/address_start",
			"group": "build",
			"presentation": {
				"reveal": "silent",
			},
			"problemMatcher": []
		},
		{
			"label": "diff address clear start",
			"type": "shell",
			"command": "rm tools/diff_func/address_start && touch tools/diff_func/address_start",
			"group": "build",
			"presentation": {
				"reveal": "silent",
			},
			"problemMatcher": []
		},
		{
			"label": "diff address set stop",
			"type": "shell",
			"command": "echo ${input:address} > tools/diff_func/address_stop",
			"group": "build",
			"presentation": {
				"reveal": "silent",
			},
			"problemMatcher": []
		},
		{
			"label": "diff address clear stop",
			"type": "shell",
			"command": "rm tools/diff_func/address_stop && touch tools/diff_func/address_stop",
			"group": "build",
			"presentation": {
				"reveal": "silent",
			},
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "rippedSymbol",
			"type": "promptString",
			"description": "What symbol do you want to rip?"
		},
		{
			"id": "address",
			"type": "promptString",
			"description": "address"
		}
	]
}